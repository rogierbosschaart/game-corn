<div class="container">

  <div class="cards-section">

    <% @items.each do |item| %>
      <%= link_to item_path(item) do %>

        <div class="card">

          <div class="card-platform">
            <p><%= item.platform %></p>
          </div>

          <%# <div class="card-image"> %>
            <%= image_tag item.poster_url, class: "game-image", alt: "Image of #{item.title}" %>
          <%# </div> %>

          <div class="card-title">
            <h2><%= item.title %></h2>
          </div>

        </div>

      <% end %>
    <% end %>

  </div>

</div>
