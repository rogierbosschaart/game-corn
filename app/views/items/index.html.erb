<div class="container">
  <h1>Video Game Collection</h1>
  <p>Welcome to the video game collection page.</p>

  <% @items.each do |item| %>
    <div class="card">
      <h2><%= item.title %></h2>

      <% if item.image.attached? %>
        <%= image_tag item.image, class: "game-image", alt: "Image of #{item.title}" %>
      <% else %>
        <%= image_tag "placeholder_game_image.png", class: "game-image", alt: "No image available" %>
      <% end %>

      <p><strong>Platform:</strong> <%= item.platform %></p> 
    </div>
  <% end %>
</div>