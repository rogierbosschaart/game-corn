<div class="banner">
  <h1><i class="fa-solid fa-gamepad"></i> GameCorn</h1>
</div>

<div class="container mt-4">

  <div class="cards-section">

    <% @items.each do |item| %>
      <%= link_to item_path(item) do %>

        <div class="card">

          <div class="card-platform">
            <p><%= item.platform %></p>
          </div>

          <%= cl_image_tag item.photo.key %>

          <div class="card-title">
            <h2><%= item.title %></h2>
          </div>

        </div>

      <% end %>
    <% end %>

  </div>

</div>
