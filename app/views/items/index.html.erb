<div class="banner">
  <h1><i class="fa-solid fa-gamepad"></i> GameCorn <i class="fa-solid fa-gamepad"></i></h1>
  <h2>RENT  |  GAME  |  RETURN</h2>
</div>

<div class="container mt-4">

  <div class="form-section">
    <%= form_with url: root_path, method: :get, class: "search-form" do %>
      <%= text_field_tag :query,
            params[:query],
            # class: "form-control",
            placeholder: "Type a keyword"
        %>
      <%= submit_tag "SEARCH GAME", name: "", class: "button" %>
    <% end %>
  </div>

  <div class="cards-section">

    <% @items.each do |item| %>
      <%= link_to item_path(item) do %>

        <div class="card">

          <div class="card-platform">
            <p>
              <i class="<%= platform_icon(item.platform) %>"></i>
              <%= item.platform %>
            </p>
          </div>

          <% if item.photo.attached? %>
            <%= cl_image_tag item.photo.key %>
          <% else %>
            <div class="placeholder-image">No image available</div>
          <% end %>

          <div class="card-title">
            <h2><%= item.title %></h2>
          </div>

        </div>

      <% end %>
    <% end %>

  </div>

</div>
