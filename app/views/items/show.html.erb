<div class="banner">
  <h1><i class="fa-solid fa-gamepad"></i> GameCorn</h1>
</div>

<div class="container mt-4">
  <%= link_to "BACK", root_path, class:"button-back" %>
  <div class="outline-container">
    <div class="item-container">
      <div class="image-container">
         <%# Put the image back here %>
         <%= cl_image_tag @item.photo.key, height: 450, width: 300, crop: :fill %>
      </div>
      <div class="description-container">
        <div class="platform-container">
          <p><%= @item.platform %></p>
        </div>
        <div class="text-container">
          <h2><%= @item.title %></h1>
          <p><strong>Genre:</strong> <%= @item.genre %></p>
          <p><strong>Description:</strong> <%= @item.description %></p>
        </div>
        <%= link_to new_item_offer_path(@item) do %>
          <div class="offer-button">
            <span>RENT GAME</span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
