
<%= simple_form_for @item do |f| %>
  <%= f.input :title %>
  <%= f.input :photo, as: :file %>
  <%= f.input :description %>
  <%= f.input :genre, collection: Item::GENRES %>
  <%= f.input :platform, collection: Item::PLATFORMS %>
