<div>
  <%= form_with(model: [item, rating], html: { id: "rating-form" }) do |f| %>
    <div class="star-rating">
      <% 5.downto(1) do |i| %>
        <input type="radio" name="rating[value]" value="<%= i %>" id="star<%= i %>" class="star-input" <%= "checked" if rating.value == i %>>
        <label for="star<%= i %>" class="star-label">â˜…</label>
      <% end %>
    </div>

    <%= f.submit rating.persisted? ? "Update Rating" : "Save Rating", class: "btn btn-primary mt-2" %>
  <% end %>
</div>
